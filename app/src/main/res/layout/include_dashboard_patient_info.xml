<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp5">
    <TextView android:textSize="@dimen/dp13"
              android:id="@+id/tvGeneral"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/dp10"
              android:text="Cash Information"/>
    <LinearLayout
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="@dimen/dp10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2.0">
        <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="160.0dip"
                android:layout_weight="1.0">
            <LinearLayout
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp5"
                    android:paddingRight="@dimen/dp5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1.0">
                    <TextView
                            android:textSize="@dimen/dp11"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:text="@string/received"
                            android:layout_weight="0.5"/>
                    <TextView
                            android:textSize="@dimen/dp11"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:text=":"
                            android:layout_weight="0.1"/>
                    <TextView
                            android:textSize="@dimen/dp11"
                            android:textColor="@color/colorAccent"
                            android:gravity="right"
                            android:id="@+id/text_view_received"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:text="0 Tk"
                            android:layout_weight="0.4"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:textSize="@dimen/dp11"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:text="@string/payment"
                            android:layout_weight="0.5"/>
                    <TextView android:textSize="@dimen/dp11"
                              android:layout_width="0.0dip"
                              android:layout_height="fill_parent"
                              android:text=":"
                              android:layout_weight="0.1"/>
                    <TextView
                            android:textSize="@dimen/dp11"
                            android:textColor="@color/colorAccent"
                            android:gravity="right"
                            android:id="@+id/text_view_payment"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:text="0 Tk"
                            android:layout_weight="0.4"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:textSize="@dimen/dp11"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:text="@string/cash"
                            android:layout_weight="0.5"/>
                    <TextView
                            android:textSize="@dimen/dp11"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:text=":"
                            android:layout_weight="0.1"/>
                    <TextView
                            android:textSize="@dimen/dp11"
                            android:textColor="@color/colorAccent"
                            android:gravity="right"
                            android:id="@+id/text_view_cash"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:text="0 Tk"
                            android:layout_weight="0.4"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
            <View android:background="@color/dashboard_line"
                  android:layout_width="1.0dip"
                  android:layout_height="160.0dip"
                  android:layout_alignParentRight="true"/>
            <com.github.mikephil.charting.charts.BarChart
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/bar_chart_cash"
                    android:background="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp160"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>