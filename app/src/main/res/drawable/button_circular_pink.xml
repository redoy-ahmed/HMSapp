<?xml version="1.0" encoding="utf-8"?>
<selector>
    <item n1:state_enabled="false"
      xmlns:n1="http://schemas.android.com/apk/res/android">
        <layer-list>
            <item>
                <shape n1:shape="rectangle">
                    <solid n1:color="@color/grey4" />
                    <corners n1:radius="@dimen/buttons_radius" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item n2:state_pressed="true"
      xmlns:n2="http://schemas.android.com/apk/res/android">
        <layer-list>
            <item>
                <shape n2:shape="rectangle">
                    <solid n2:color="@color/colorPrimary" />
                    <corners n2:radius="@dimen/buttons_radius" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape n3:shape="rectangle"
                  xmlns:n3="http://schemas.android.com/apk/res/android">
                    <solid n3:color="@color/colorPrimary" />
                    <corners n3:radius="@dimen/buttons_radius" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>